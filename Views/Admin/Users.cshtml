@model IReadOnlyList<AdminUserSummaryViewModel>
@{
    ViewData["Title"] = "Manage Users";
}

<section class="fem-card p-3 p-md-4">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-3 gap-2">
        <div>
            <h1 class="h4 fw-bold mb-1">User Management</h1>
            <p class="text-secondary mb-0">Review account status and verification details.</p>
        </div>
        <a asp-action="Dashboard" class="btn btn-outline-dark btn-sm">Back to Dashboard</a>
    </div>

    @if (Model.Count == 0)
    {
        <div class="empty-state">No users found.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Name</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Verified</th>
                        <th>Blocked</th>
                        <th>Registered</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (AdminUserSummaryViewModel user in Model)
                    {
                        <tr>
                            <td class="fw-semibold">@user.FullName</td>
                            <td>@user.UserName</td>
                            <td>@user.Email</td>
                            <td>
                                @if (user.IsVerified)
                                {
                                    <span class="badge text-bg-success">Yes</span>
                                }
                                else
                                {
                                    <span class="badge text-bg-secondary">No</span>
                                }
                            </td>
                            <td>
                                @if (user.IsBlocked)
                                {
                                    <span class="badge text-bg-danger">Blocked</span>
                                }
                                else
                                {
                                    <span class="badge text-bg-light border">Active</span>
                                }
                            </td>
                            <td>@user.RegisteredOnUtc.ToLocalTime().ToString("dd MMM yyyy")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</section>
