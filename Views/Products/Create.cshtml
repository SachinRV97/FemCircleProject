@model ProductCreateViewModel
@{
    ViewData["Title"] = "Create Listing";
}

<section class="fem-card p-4 p-md-5">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-4 gap-2">
        <div>
            <h1 class="h3 fw-bold mb-1">List a Product</h1>
            <p class="text-secondary mb-0">Add details for sell, donate, or exchange listing.</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-dark btn-sm">Back to Marketplace</a>
    </div>

    <form asp-action="Create" method="post" enctype="multipart/form-data" novalidate>
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="row g-3">
            <div class="col-md-8">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger small"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="Category" class="form-label"></label>
                <input asp-for="Category" class="form-control" />
                <span asp-validation-for="Category" class="text-danger small"></span>
            </div>

            <div class="col-12">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger small"></span>
            </div>

            <div class="col-md-4">
                <label asp-for="ListingType" class="form-label"></label>
                <select asp-for="ListingType" class="form-select" asp-items="Html.GetEnumSelectList<ProductListingType>()"></select>
                <span asp-validation-for="ListingType" class="text-danger small"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="Price" class="form-label">Price (INR)</label>
                <div class="input-group">
                    <span class="input-group-text">INR</span>
                    <input asp-for="Price" class="form-control" id="priceInput" />
                </div>
                <span asp-validation-for="Price" class="text-danger small"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="ItemCondition" class="form-label"></label>
                <input asp-for="ItemCondition" class="form-control" />
                <span asp-validation-for="ItemCondition" class="text-danger small"></span>
            </div>

            <div class="col-md-4">
                <label asp-for="Quantity" class="form-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger small"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="City" class="form-label"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger small"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="ImageUrl" class="form-label"></label>
                <input asp-for="ImageUrl" class="form-control" placeholder="https://example.com/image.jpg" />
                <span asp-validation-for="ImageUrl" class="text-danger small"></span>
            </div>
            <div class="col-md-8">
                <label asp-for="ImageFile" class="form-label"></label>
                <input asp-for="ImageFile" class="form-control" type="file" accept=".jpg,.jpeg,.png,.webp,image/jpeg,image/png,image/webp" />
                <div class="form-text">Optional. Upload JPG, PNG, or WEBP image (max 5 MB). Uploaded file will override Image URL.</div>
                <span asp-validation-for="ImageFile" class="text-danger small"></span>
            </div>
        </div>

        <div class="d-flex gap-2 mt-4">
            <button type="submit" class="btn btn-primary px-4">Publish Listing</button>
            <a asp-action="Index" class="btn btn-outline-dark">Cancel</a>
        </div>
    </form>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            var listingType = document.getElementById("ListingType");
            var priceInput = document.getElementById("priceInput");

            function syncPriceState() {
                if (!listingType || !priceInput) {
                    return;
                }

                var isDonate = listingType.value === "Donate";
                if (isDonate) {
                    priceInput.value = "0";
                }
            }

            if (listingType) {
                listingType.addEventListener("change", syncPriceState);
                syncPriceState();
            }
        })();
    </script>
}
